// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  username            String               @unique
  name                String
  headline            String
  location            String
  bio                 String
  avatarUrl           String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  posts               Post[]
  sentConnections     Connection[]         @relation("SentConnections")
  receivedConnections Connection[]         @relation("ReceivedConnections")
  messages            Message[]
  conversationMembers ConversationMember[]
  recommendations     Recommendation[]
  cvOverviewStats     CvOverviewStat[]
  cvTechRows          CvTechRow[]
  cvSkills            CvSkill[]
  cvJobs              CvJob[]
  cvEducation         CvEducation[]
}

model CvEducation {
  id          String   @id @default(cuid())
  userId      String
  degree      String
  institution String
  period      String
  grade       String
  note        String
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, sortOrder])
}

model CvOverviewStat {
  id        String   @id @default(cuid())
  userId    String
  value     String
  label     String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, sortOrder])
}

model CvTechRow {
  id        String   @id @default(cuid())
  userId    String
  category  String
  items     String
  years     String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, sortOrder])
}

model CvSkill {
  id        String   @id @default(cuid())
  userId    String
  name      String
  category  String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, sortOrder])
}

model CvJob {
  id              String         @id @default(cuid())
  userId          String
  company         String
  date            String
  title           String
  description     String
  sortOrder       Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  cvJobBullets    CvJobBullet[]
  cvJobStackItems CvJobStackItem[]

  @@index([userId, sortOrder])
}

model CvJobBullet {
  id        String   @id @default(cuid())
  jobId     String
  content   String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  job       CvJob    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId, sortOrder])
}

model CvJobStackItem {
  id        String   @id @default(cuid())
  jobId     String
  label     String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  job       CvJob    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId, sortOrder])
}

model Recommendation {
  id                String   @id @default(cuid())
  recipientId       String
  recommenderName   String
  recommenderRole   String
  relationshipLabel String
  recommendationAt  DateTime
  content           String
  isPublic          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  recipient         User     @relation(fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([recipientId, recommendationAt])
}

model Post {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([createdAt])
}

model Connection {
  id          String           @id @default(cuid())
  requesterId String
  receiverId  String
  status      ConnectionStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  requester   User             @relation("SentConnections", fields: [requesterId], references: [id], onDelete: Cascade)
  receiver    User             @relation("ReceivedConnections", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([requesterId, receiverId])
  @@index([status])
}

model Conversation {
  id        String               @id @default(cuid())
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  members   ConversationMember[]
  messages  Message[]
}

model ConversationMember {
  id             String       @id @default(cuid())
  conversationId String
  userId         String
  joinedAt       DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
}

model Message {
  id             String       @id @default(cuid())
  content        String
  createdAt      DateTime     @default(now())
  conversationId String
  senderId       String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}
